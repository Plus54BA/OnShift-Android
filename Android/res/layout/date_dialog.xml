<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:id="@+id/DateTimeDialog" 
	android:layout_width="fill_parent"
	android:layout_height="wrap_content"
	android:background="@drawable/dialog_background">
	<com.onshift.mobile.widgets.SingleDatePicker
		android:id="@+id/SingleDatePicker" 
		android:layout_width="fill_parent"
		android:layout_height="wrap_content" />
	<LinearLayout android:id="@+id/ControlButtons"
		android:layout_width="fill_parent" 
		android:layout_height="wrap_content"
		android:layout_below="@+id/SingleDatePicker"
		android:padding="5dip">	
		<Button android:id="@+id/SetDateTime" 
		    android:layout_width="0dip"
			android:text="@string/set" 
			android:layout_weight="1"
			android:layout_height="50dp"
			android:textSize="20sp"
			android:textColor="@color/white"
			android:layout_marginRight="1dp"
			android:background="@drawable/set_background"/>
		<Button android:id="@+id/CancelDialog" 
		    android:layout_width="0dip"
			android:text="@string/cancel" 
			android:layout_weight="1"
			android:layout_height="50dp"
			android:textSize="20sp"
			android:layout_marginLeft="1dp"
			android:background="@drawable/cancel_background"/>
	</LinearLayout>
</RelativeLayout>