<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/Force_Password_Main_Layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    android:paddingLeft="15dp"
    android:paddingRight="15dp" >

    <TextView
        android:id="@+id/View_Title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:layout_gravity="center"
        android:text="@string/change_password"
        android:textColor="@color/black"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <RelativeLayout
        android:id="@+id/Force_Password_Errors"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="0dp"
        android:background="@color/white"
        android:orientation="vertical" >

    <TextView
        android:id="@+id/Force_Password_ErrorText"
        android:layout_width="match_parent"
		android:layout_height="40dp"
		android:layout_marginLeft="45dp"
		android:layout_marginTop="10dp"
		android:layout_alignParentTop="true"
		android:textSize="15sp"
		android:singleLine="false"
		android:textStyle="bold"
		android:textColor="@color/red_light"/>

    <ImageView
        android:id="@+id/imgAlert"
        android:layout_width="15dp"
        android:layout_height="15dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="12dp"
        android:src="@drawable/alert"/>
    </RelativeLayout>

    <TextView
        android:id="@+id/Force_Password"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:text="@string/password"
        android:textColor="@color/black"
        android:textColorHint="@color/black" />

    <EditText
        android:id="@+id/Force_Password_Edit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:ems="10"
        android:hint="@string/password_help"
        android:inputType="textPassword"
        android:paddingTop="5dp" >
        <requestFocus />
    </EditText>

    <TextView
        android:id="@+id/Force_Password_Help"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/password_rules"
        android:textColor="@color/black"
        android:textColorHint="@color/black" />

    <TextView
        android:id="@+id/Force_Password_Confirm"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="@string/confirm_password"
        android:textColor="@color/black" />

    <EditText
        android:id="@+id/Force_Password_Confirm_Edit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:ems="10"
        android:inputType="textPassword"
        android:paddingTop="5dp" />

    <Button
        android:id="@+id/Force_Password_Button"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/login_button"
        android:text="@string/update_password"
        android:textColor="@color/white"
        android:textSize="20sp"
        android:textStyle="bold" />
    
    

</LinearLayout><!-- From: file:/Users/matias/Documents/Proyects/OnShift-Android/Android/res/layout/activity_force_password_reset.xml -->